 {
 
 case 1:
 {
 int count=0;
 string suserId,spassword,sId,spass;
 cout<<"\n\t\t\tenter the username which you remember :";
 cin>>suserId;
 
 ifstream f2("records.txt");
 while(f2>>sId>>spass)
 {
 if(sId==suserId)
 {
 count=1;
 }
 }
 f2.close();
 if(count==1)
 {
 cout<<"\n\n Your account is found \n";
 cout<<"\n\n your password is :"<<spass;
